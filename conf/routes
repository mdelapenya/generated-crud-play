# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET /tasks/:id controllers.TaskApplication.get(id: Long)

GET /task/add controllers.TaskApplication.addTask

# Display all tasks
GET /tasks controllers.TaskApplication.all

POST /task/submit controllers.TaskApplication.submit()

# Upload SQL file
POST /upload controllers.Application.uploadSQL